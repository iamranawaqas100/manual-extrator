{
  "name": "advanced-data-extractor",
  "version": "2.0.5",
  "description": "Professional web scraping desktop application with Chrome extension functionality",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "inject-version": "node scripts/inject-version.js",
    "prebuild": "npm run inject-version && npm run test",
    "build": "electron-builder --dir || echo Build completed with warnings",
    "prebuild:win": "npm run inject-version && npm run test",
    "build:win": "electron-builder --win nsis",
    "publish": "electron-builder --publish=always",
    "prepare": "husky install"
  },
  "keywords": [
    "electron",
    "web-scraping",
    "data-extraction",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "electron": "^38.1.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@sentry/electron": "^4.15.0",
    "cheerio": "^1.1.2",
    "electron-updater": "^6.6.2",
    "puppeteer-core": "^24.22.0",
    "update-electron-app": "^3.1.1",
    "ws": "^8.18.0"
  },
  "optionalDependencies": {
    "electron-reload": "^2.0.0-alpha.1"
  },
  "build": {
    "appId": "com.yourcompany.advanced-data-extractor",
    "productName": "Advanced Data Extractor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "forceCodeSigning": false,
    "publish": {
      "provider": "github",
      "owner": "iamranawaqas100",
      "repo": "manual-extrator"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraMetadata": {
      "main": "src/main.js"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "jest --findRelatedTests"
    ]
  }
}
